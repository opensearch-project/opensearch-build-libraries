pipeline {
    agent none
    parameters {
        string(
            name: 'PRODUCT',
            description: 'Which product to build RC for: opensearch, opensearch-dashboards or both',
            trim: true
        )
    }
    stages {
        stage('buildBothRC') {
            steps {
                script {
                    buildRC(
                        version: '2.19.0',
                        product: "${params.PRODUCT}"
                    )
                }
            }
        }
    }
}
