pipeline {
    agent none
    stages {
        stage('sign') {
            steps {
                script {
                    signArtifacts(
                            artifactPath: "${WORKSPACE}/artifacts",
                            sigtype: '.sig',
                            platform: 'linux'
                    )

                    signArtifacts(
                            artifactPath: "${WORKSPACE}/artifacts",
                            sigtype: '.rpm',
                            platform: 'linux',
                            overwrite: false
                    )

                    signArtifacts(
                            artifactPath: "${WORKSPACE}/file.yml",
                            platform: 'linux',
                            type: 'maven',
                    )

                    signArtifacts(
                        artifactPath: "${WORKSPACE}/the_msi.msi",
                        platform: 'windows',
                        overwrite: true
                )
                }
            }
        }
    }
}
